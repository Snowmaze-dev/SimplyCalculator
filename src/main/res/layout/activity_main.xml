<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
    <TextView
        android:id= "@+id/input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:gravity="center"
        android:hint="Ввод"
        android:layout_weight="1.8" />
    </LinearLayout>
    <TextView
        android:id= "@+id/output"
        android:layout_width="match_parent"
        android:gravity = "center"
        android:hint="Вывод"
        android:textSize="30sp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#733834"
                android:text="+"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#733834"
                android:layout_weight="1"
                android:text="-"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#733834"
                android:layout_weight="1"
                android:text="*"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#733834"
                android:layout_weight="1"
                android:text="/"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#733834"
                android:layout_weight="1"
                android:text="^"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#733834"
                android:layout_weight="1"
                android:text="SQRT"
                android:onClick="onButton"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="0"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="1"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="2"
                android:onClick="onButton"
                />
         </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:background="#434343"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="onButton"
                    />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="7"
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="onButton"
                    />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text="("
                    android:onClick="onButton"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#434343"
                    android:layout_weight="1"
                    android:text=")"
                    android:onClick="onButton"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="."
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="PI"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="e"
                android:onClick="onButton"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#434343"
                android:layout_weight="1"
                android:text="Стереть"
                android:onClick="clear"
                />
        </LinearLayout>
    </LinearLayout>

